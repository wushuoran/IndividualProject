<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/chart_bound1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- LinearLayout below is for username and edit button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:textAllCaps="false"
                    android:text="USER_NAME"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="edit" />

            </LinearLayout>>

            <TextView
                android:id="@+id/text_avg_speed"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="History AVG Speed: 20 kph"
                />

            <TextView
                android:id="@+id/text_user_rating"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="Rating: 5.0/5.0"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_manage_ride"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="View / Manage Rides"
        />

    <Button
        android:id="@+id/btn_fri_req"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Friend Requests"
        />

    <Button
        android:id="@+id/btn_fri_list"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Friends List"
        />

    <Button
        android:id="@+id/btn_account_set"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Account Settings"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_terms"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Read T&amp;C"
            />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Logout"
            />

    </LinearLayout>

</LinearLayout>